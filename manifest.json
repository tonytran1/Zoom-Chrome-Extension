{
  "manifest_version": 2,

  "name": "Zoom Plugin",
  "description": "This extension will provide a shortcut to zoom in/out",
  "version": "1.0",
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",

  "browser_action": {
    "default_icon": "zoom.png",
    "default_popup": "zoom.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["content.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*"
   ]
}
